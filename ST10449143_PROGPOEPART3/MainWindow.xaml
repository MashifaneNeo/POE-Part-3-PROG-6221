<Window x:Class="ST10449143_PROGPOEPART3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ST10449143_PROGPOEPART3"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Cybersecurity Assistant" Height="700" Width="1100" WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top" Background="#FF0F3460" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Cybersecurity Assistant" Foreground="White" 
                               FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="SettingsButton" Content="Settings" Margin="5,0"/>
                    <Button x:Name="ExitButton" Content="Exit" Margin="5,0" Click="ExitButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Tabs -->
        <TabControl x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem x:Name="TaskAssistantTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Task Assistant"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>

            <TabItem x:Name="QuizTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Cybersecurity Quiz"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>

            <TabItem x:Name="NlpTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="NLP Processor"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>

            <TabItem x:Name="ActivityLogTab">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Activity Log"/>
                    </StackPanel>
                </TabItem.Header>
            </TabItem>
        </TabControl>

        <!-- NLP Launch Button -->
        <Button Content="Open NLP Processor" Click="OpenNLPProcessor_Click" Margin="10" />

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Background="#FFE0E0E0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" FontWeight="Bold"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="TimeText"/>
            </StatusBarItem>
        </StatusBar>
    </DockPanel>
</Window>
